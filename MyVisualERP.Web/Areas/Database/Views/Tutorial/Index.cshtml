@model IEnumerable<My.DAL.dbtutorial>

@{
    ViewBag.Title = "Tutorial"; <!-- Ganti sesuai dengan nama controller-->
}

<!-- Insert section styles -->
@section styles {
    <!-- DataTable CSS-->
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<!-- <h2>Index</h2>  //Hapus Bagian ini-->
