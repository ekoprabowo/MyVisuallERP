<!-- Ganti dengan ini -->
<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">List of Tutorials</h3> <!-- Ganti textnya -->
    </div>
    <div class="box-body">
        <p>
            <a href="@Url.Action("Create")" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> Add New
            </a>
        </p> <!-- Sampai sini-->

        <table class="table table-bordered table-hover nowrap"><!-- Tambahin table-bordered, table-hover, dan nowrap -->
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.sName) <!-- Ini text di Head, Bisa diganti-->
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.sAddress) <!-- Ini text di Head, Bisa diganti -->
                    </th>
                    <th>Action</th> <!-- Untuk nambahin head Action-->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.sName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sAddress)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.pID }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Details", "Details", new { id = item.pID }, new { @class = "btn btn-success btn-xs" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.pID }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    <!-- Cut Bagian bawah ini -->
    </div><!-- /.box-body -->
</div> <!-- Sampai sini -->

<!-- Insert section scripts -->
@section scripts {
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>

    <!-- DataTable -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').DataTable({
                responsive: true,
                language: {
                    searchPlaceholder: "Search"
                }
            });
        });
    </script>
}
